-- display stuff

function make_title(str)
 local title = {}
 for i=1,#str do
  title[i]={
   sub(str,i,i),
   flr(rnd(16)),
   flr(rnd(3))-1,
   flr(rnd(3))-1
  }
 end
 return title
end

function make_waves(count)
 local waves = {}
 for i=1,count do
  waves[i]={
   frame=flr(rnd(30))-30,
   x=0,
   y=0
  }
 end
 return waves
end


