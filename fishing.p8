function _init()
 scene="main"
 main_clr=rnd(5)+1
 title=make_title("picogalactic fishing")
 waves=make_waves(10)
 t=0
  
end


function _draw()
 cls()
 printh(scene)
 
 if (scene == "main") then
  draw_main()
 elseif (scene == "credits") then
  draw_credits()
 elseif (scene == "game") then
  draw_game()
 end
 
 
end


function _update()
 t+=1
 if (scene == "main") then
  update_main()
 elseif (scene == "credits") then
  update_credits()
 elseif (scene == "game") then
  update_game()
 end
  
end
